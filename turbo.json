{
  "$schema": "https://turbo.build/json-schema.json",
  "globalDependencies": ["**/.env.local", "**/.env"],
  "globalEnv": [
    "DB_HOST",
    "DB_PORT",
    "DB_USERNAME",
    "DB_PASSWORD",
    "DB_DATABASE",
    "REDIS_HOST",
    "REDIS_PORT",
    "KAFKA_BROKERS",
    "JWT_SECRET"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": ["lint-results/**"],
      "cache": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:e2e": {
      "cache": false
    },
    "type-check": {
      "cache": true
    }
  }
}
